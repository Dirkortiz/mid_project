<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/allRestaurants.css" />
<!-- aqui pondre el link del css de esta pagina -->
<link rel="stylesheet" href="/stylesheets/navbar.css" />
<title>Restaurantes</title>
<%- include('navbar') %>

<main>
  <section class="row section3">
    <div
      class="col-12 d-flex flex-column align-items-center justify-content-center text-center"
    >
      <br /><br />
      <h2>Nuestras recomendaciones</h2>

      <div
        class="d-flex col-6 flex-wrap gap-4 m-1 justify-content-center mt-3 mb-5 align-items-center"
      >
        <% result.forEach(elem => { %>
        <div>
          <img src="/images/restaurants/<%= elem.res_img %>" alt="" />
          <p></p>
          <p><b><%= elem.name %></b></p>
          <p><%= elem.style %></p>
          <p><%= elem.phone_number %> ☎</p>

          <a href="/restaurant/oneRestaurant/<%= elem.restaurant_id %>">
            <button class="btn btn-primary">Menú & info</button>
          </a>
        </div>

        <% }) %>
      </div>
    </div>
  </section>
</main>

<%- include('footer') %>
